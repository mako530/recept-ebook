# .editorconfig

# Top-most EditorConfig file
root = true

# Indentation and formatting settings
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Specify file-specific rules
[*.md]
trim_trailing_whitespace = false

# PHP-specific settings
[*.php]
indent_size = 4

# JavaScript and JSON files
[*.js]
[*.json]
indent_size = 2

# Laravel Blade templates
[*.blade.php]
indent_style = blade
indent_size = 4

# Exclude specific directories
[bootstrap/*]
[config/*]
[database/*]
[public/*]
[resources/*]
[storage/*]
[test/*]
[vendor/*]